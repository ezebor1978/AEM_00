<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Hero"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <header
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Header"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <black-title
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Black Title"
                                                maxlength="35"
                                                fieldDescription="Limit of 35 characters"
                                                required="{Boolean}true"
                                                name="./blackTitle"/>
                                            <blue-title
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Blue Title"
                                                maxlength="20"
                                                fieldDescription="Limit of 20 characters"
                                                required="{Boolean}true"
                                                name="./blueTitle"/>
                                            <second-black-title
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Black Title"
                                                maxlength="20"
                                                fieldDescription="Limit of 20 characters"
                                                required="{Boolean}true"
                                                name="./secondBlackTitle"/>
                                            <subtitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Subtitle"
                                                maxlength="130"
                                                fieldDescription="Limit of 130 characters"
                                                required="{Boolean}true"
                                                name="./subtitle"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </header>
                    <plan-finder
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Plan Finder"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <placeholder
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Search input"
                                                maxlength="25"
                                                fieldDescription="Limit of 25 characters"
                                                required="{Boolean}true"
                                                name="./placeholder"/>
                                            <cta-text
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Search Button"
                                                fieldDescription="Limit of 20 characters"
                                                maxlength="20"
                                                name="./ctaText"/>
                                            <cta-link
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                fieldLabel="CTA Link"
                                                name="./ctaLink"
                                                rootPath="/content/akron"/>
                                            <cta-link-target
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                name="./ctaLinkTarget"
                                                fieldLabel="CTA Target">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="akron/datasources/dropdown"
                                                    path="/apps/akron/dialogs/options/target-options"
                                                    defaultValueSelected="internal"/>
                                            </cta-link-target>
                                            <description
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Description"
                                                fieldDescription="Limit of 35 characters"
                                                required="{Boolean}true"
                                                maxlength="35"
                                                name="./description"/>
                                            <description-link
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Description link"
                                                maxlength="35"
                                                fieldDescription="Limit of 35 characters"
                                                required="{Boolean}true"
                                                name="./descriptionLink"/>
                                            <description-link-url
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                fieldLabel="Description link URL"
                                                name="./descriptionLinkUrl"
                                                required="{Boolean}true"
                                                rootPath="/content/akron"/>
                                            <description-link-target
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                name="./descriptionLinkTarget"
                                                fieldLabel="Description link target">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="akron/datasources/dropdown"
                                                    path="/apps/akron/dialogs/options/target-options"
                                                    defaultValueSelected="internal"/>
                                            </description-link-target>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </plan-finder>
                    <image
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Images"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <background-image
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/fileupload"
                                                fieldLabel="Background Image"
                                                fieldDescription="Image for the top section of the component"
                                                fileNameParameter="./fileName"
                                                fileReferenceParameter="./backgroundImage"
                                                mimeTypes="[image]"
                                                multiple="{Boolean}false"
                                                name="./file"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                            <bottomImages
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true"
                                                required="{Boolean}true"
                                                validation="multifield-max-5"
                                                fieldLabel="Bottom Images">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./multifieldBottomImages">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <column
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <background-image
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                                    fieldLabel="Image"
                                                                    fieldDescription="Image for the bottom section of the component"
                                                                    rootPath="/content/dam"
                                                                    required="{Boolean}true"
                                                                    name="./image"/>
                                                                <background-mobile-image
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                                    fieldLabel="Mobile Image"
                                                                    fieldDescription="Mobile image for the bottom section of the component"
                                                                    rootPath="/content/dam"
                                                                    name="./mobileImage"/>
                                                            </items>
                                                        </column>
                                                    </items>
                                                </field>
                                            </bottomImages>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </image>
                    <plan-modal
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Utilities Modal"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <modal-title
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Title"
                                                maxlength="25"
                                                fieldDescription="Limit of 25 characters"
                                                required="{Boolean}true"
                                                name="./modalTitle"/>
                                            <modal-description
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Description"
                                                fieldDescription="Limit of 130 characters"
                                                maxlength="130"
                                                required="{Boolean}true"
                                                name="./modalDescription"/>
                                            <noEDCLink
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                fieldLabel="'No EDC Found' page"
                                                name="./noEDCLink"
                                                required="{Boolean}true"
                                                rootPath="/content/akron"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </plan-modal>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
